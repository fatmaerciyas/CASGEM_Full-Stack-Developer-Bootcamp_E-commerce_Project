@model List<Pizzapan.EntityLayer.Concrete.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürünler</h1>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Açıklaması</th>
        <th>Ürün Görseli</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Kategorisi</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.ImageUrl</td>
            <td>@item.Price</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-danger">Güncelle</a></td>
            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>

<a href="/Product/AddProduct" class="btn btn-outline-primary">Yeni Ürün Girişi</a>